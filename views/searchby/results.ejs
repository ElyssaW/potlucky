

  <style>
    .profile-row {
        width: 80vw;
        height: 100vh;
    }
    .left-col {
        background-image: url('/Images/lemons.jpg');
        background-size: 500px;
        background-repeat: repeat;
        border-right: white solid 50px;
    }
  
    .profile-pic {
        z-index: 5;
        position:absolute;
        top: 15vh;
        left: 140px;
        width: 250px;
        height: 250px;
        border-radius: 30px;
    }
  
    .card {
        padding: 20px;
        height: 70vh;
        width: 50vw;
        position: relative;
        top: 10vh;
        border: none;
        left: 10vw;
    }
  
    .profile-display {
        display: inline;
    }
  
    .card-bank {
        border-radius: 15px;
        padding: 10px;
        background-color: #f9E07F;
    }
  
  </style>
  
  <div class="row profile-row">
    <div class="left-col col-md-3">
        
    </div>
      <div class="right-col col-md-8">
        <div class="card">
          <div>
            <form action="/searchby" method="POST">
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Search By</label>
                <input type="text" class="form-control" placeholder="Keyword, location, etc..." id="exampleFormControlInput1" name="key">
              </div>

              <div>
                <input type="radio" name="searchType" value="offers" id="1">
                <label for="1">
                  Search requests
                </label>

                <input type="radio" name="searchType" value="requests" id="2">
                <label for="2">
                  Search offers
                </label>

                <input type="radio" name="searchType" value="both" id="3" checked>
                <label for="3">
                  Search both
                </label>
              </div>
  
              <div>
                <input type="checkbox" id="anywhere" name="targetSearch" checked>
                <label for="anywhere">Restrict results to my area</label>
              </div>
              
                <input type="submit" class="btn btn-primary">
              </div>
            </form>

          <div class="display-results">
            <div class="card-bank">
              <% results.forEach(result => { %>
                <div class="row row-cols-2">

                  <div class="col-auto">
                    <img src="<%= result.user.aviurl %>" height="80px" width="80px" alt="Avatar">
                  </div>
                  
                  <div class="col-md-10">
                    <h4 style="display: inline;"><a href="/offer/show/<%= result.id %>"><%= result.title %> by <%= result.user.name %></a></h4>
                    <p>at <%= result.location.address %></p>
                  </div>
                  
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>