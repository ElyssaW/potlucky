<form action="/auth/signup" method="POST">
    <label for="new-name">Name</label>
    <input type="text" name="name" placeholder="name" id="new-name">

    <label for="email">Email</label>
    <input type="email" name="email" placeholder="email" id="email">

    <label for="password">Password</label>
    <input type="password" name="password" placeholder="password" id="password">

    <div class="form-check">
        <input class="form-check-input" type="radio" name="usertype" value="personal" id="flexRadioDefault1">
        <label class="form-check-label" for="flexRadioDefault1">
          Personal
        </label>
      </div>

      <div class="form-check">
        <input class="form-check-input" type="radio" name="usertype" value="business" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
          Restaurant/Business
        </label>
      </div>

      <div class="form-check">
        <input class="form-check-input" type="radio" name="usertype" value="charity" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
          Charity/Shelter/Non-Profit
        </label>
    </div>

    <input type="submit">
</form>